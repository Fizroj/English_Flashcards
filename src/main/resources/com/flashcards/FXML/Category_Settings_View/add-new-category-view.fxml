<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.flashcards.Controllers.AddNewCategoryController">
    <content>
        <BorderPane prefHeight="400.0" prefWidth="600.0">
            <top>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Add New Category">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </top>
            <center>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="12.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Name of the Category" />
                        <VBox>
                            <children>
                                <HBox alignment="CENTER">
                                    <children>
                                        <TextField fx:id="categoryNameTextField" onAction="#onCategoryNameTextField" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="35.0">
                            <children>
                                <Button fx:id="leaveWithoutSavingButton" mnemonicParsing="false" onAction="#onLeaveWithoutSavingButton" text="Leave Without Saving" />
                                <Button fx:id="saveAndLeaveButton" mnemonicParsing="false" onAction="#onSaveAndLeaveButton" text="Save &amp; Leave" />
                            </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </content>
</ScrollPane>
