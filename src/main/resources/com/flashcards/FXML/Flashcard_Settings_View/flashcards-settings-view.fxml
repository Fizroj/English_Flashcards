<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.flashcards.Controllers.FlashcardsSettingsController">
   <top>
      <VBox alignment="CENTER" prefHeight="131.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="flashcardsSettingsLabel" text="Flashcards Settings">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children></VBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="12.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addNewFlashcardButton" mnemonicParsing="false" onAction="#onAddNewFlashcardButton" text="Add New Flashcard" />
            <Button fx:id="editFlashcardButton" mnemonicParsing="false" onAction="#onEditFlashcardButton" text="Edit Flashcard" />
            <Button fx:id="deleteFlashcardButton" mnemonicParsing="false" onAction="#onDeleteFlashcardButton" text="Delete Flashcard" />
            <Button fx:id="leaveSettingsButton" mnemonicParsing="false" onAction="#onLeaveSettingsButton" text="Leave Settings" />
         </children></VBox>
   </center>
</BorderPane>
