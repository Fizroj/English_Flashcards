<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.flashcards.Controllers.FirstCategoryController">
   <top>
      <VBox alignment="CENTER" prefHeight="124.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="nameYourCategoryLabel" text="Name you first Category of Flashcards!">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="disclaimerLabel" text="(you can change the name of it or delete it later, as long as there is at least one Category)">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="nameOfTheCategoryTextField" alignment="CENTER" maxWidth="-Infinity" prefHeight="25.0" prefWidth="266.0" promptText="Name of the Category" />
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#onSubmitButton" text="Submit">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
